<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:APBConfigInstaller.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="APBConfigInstaller.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        xmlns:views="clr-namespace:APBConfigInstaller.Views;assembly=APBConfigInstaller"
        Title="APBConfigInstaller">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <!--<materialDesign:DialogHost>-->
    <Grid>
      <TabControl TabStripPlacement="Left">
        <TabItem>
          <TabItem.Header>
            <StackPanel>
              <!--<materialDesign:PackIcon Width="24"
                                       Height="24"
                                       HorizontalAlignment="Center"
                                       Kind="Home" />-->
              <TextBlock HorizontalAlignment="Center" Text="Home" />
            </StackPanel>
          </TabItem.Header>
          <views:HomeView />
        </TabItem>
        <TabItem>
          <TabItem.Header>
            <StackPanel>
              <!--<materialDesign:PackIcon Width="24"
                                       Height="24"
                                       HorizontalAlignment="Center"
                                       Kind="PencilRuler" />-->
              <TextBlock HorizontalAlignment="Center" Text="Designer" />
            </StackPanel>
          </TabItem.Header>
          <!--content designer-->
        </TabItem>
        <TabItem>
          <TabItem.Header>
            <StackPanel>
              <!--<materialDesign:PackIcon Width="24"
                                       Height="24"
                                       HorizontalAlignment="Center"
                                       Kind="Settings" />-->
              <TextBlock HorizontalAlignment="Center" Text="Settings" />
            </StackPanel>
          </TabItem.Header>
          <views:SettingsView />
        </TabItem>
      </TabControl>

      <!--<materialDesign:Snackbar x:Name="snackBar" MessageQueue="{materialDesign:MessageQueue}" />-->

    </Grid>
  <!--</materialDesign:DialogHost>-->

</Window>
